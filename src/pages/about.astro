---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import FormattedDate from '../components/FormattedDate.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <BaseHead title={`About Us | ${SITE_TITLE}`} description="Learn about the Yale Undergraduate Journal of Research team." />
  <link href="https://fonts.googleapis.com/css2?family=Caudex:wght@400;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent-gradient: linear-gradient(45deg, var(--accent), #da62c4 30%, white 60%);
    }
    
    .hero-header {
      position: relative;
      padding: 8rem 1rem 6rem;
      text-align: center;
      background-image: url('/guillaume-bleyer-372uM1cIQqE-unsplash.jpg');
      background-size: cover;
      background-position: center;
      color: var(--white);
      margin-bottom: 3rem;
      overflow: hidden;
    }
    
    .hero-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
	  background-color: rgba(0, 0, 0, 0.5);
      z-index: 1;
    }
    
    .hero-header h1 {
      position: relative;
      z-index: 2;
      color: #ffffff;
      margin: 0;
      font-size: 4rem;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
      font-weight: 700;
      letter-spacing: -0.03em;
      animation: fadeIn 1s ease-out;
    }
    
    .container {
      max-width: 900px;
      width: 100%;
      margin: 0 auto;
      padding: 0 clamp(1rem, 5vw, 2rem);
      box-sizing: border-box;
    }
    
    .page-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .page-header h1 {
      font-size: 3rem;
      margin-bottom: 0.5rem;
      color: var(--text-heading);
    }
    
    .header-decoration {
      width: 120px;
      height: 4px;
      background: var(--accent-gradient);
      margin: 1rem auto 3rem;
      border-radius: 2px;
    }
    
    .mission-section {
      margin-bottom: 4rem;
      padding: 2rem;
      background-color: rgba(var(--accent-rgb), 0.05);
      border-left: 4px solid var(--accent);
      border-radius: 0 8px 8px 0;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
    }
    
    .mission-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: var(--text-heading);
      text-align: center;
    }
    
    .mission-text {
      font-size: 1.1rem;
      line-height: 1.6;
      text-align: justify;
    }
    
    .masthead-container {
      text-align: center;
      animation: fadeIn 1s ease-out 0.3s both;
    }
    
    .masthead-title {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: var(--text-heading);
    }
    
    .year {
      font-size: 1.5rem;
      margin-bottom: 3rem;
      color: var(--accent);
      font-weight: 500;
    }
    
    .editors-section {
      margin-bottom: 2.5rem;
    }
    
    .section-title {
      font-size: 1.5rem;
      margin-bottom: 0.8rem;
      color: var(--text-heading);
      position: relative;
      display: inline-block;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 50%;
      transform: translateX(-50%);
      width: 40px;
      height: 2px;
      background-color: var(--accent);
    }
    
    .editor-name {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: var(--text);
    }
    
    .editor-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      margin-bottom: 2.5rem;
      gap: 2rem;
    }
    
    .editor-column {
      flex: 1 1 250px;
      min-width: 200px;
      text-align: center;
      margin-bottom: 1.5rem;
      padding: 1.5rem;
      background-color: rgba(var(--accent-rgb), 0.03);
      border-radius: 8px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .editor-column:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .chiefs-container, .print-editors-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 3rem;
    }
    
    .special-role {
      padding: 1.5rem;
      background-color: rgba(var(--accent-rgb), 0.05);
      border-radius: 8px;
      margin-bottom: 2rem;
      transition: transform 0.3s ease;
    }
    
    .special-role:hover {
      transform: translateY(-5px);
    }
    
  
    
    @media (max-width: 600px) {
      .mission-text {
        text-align: left;
      }
      
      .hero-header h1 {
        font-size: 3rem;
      }
    }
  </style>
</head>
<body>
  <Header />
  <div class="hero-header">
    <h1>About Us</h1>
  </div>
  
  <main class="container">
    
    <section class="mission-section">
      <h2 class="mission-title">Our Mission</h2>
      <p class="mission-text">
	  The Yale Undergraduate Journal of Religion (YUJR) is a student-run publication dedicated to showcasing excellence in undergraduate research in religious studies. Founded to foster critical inquiry into the wide-ranging practices, ideologies, and societal impacts of religion, YUJR embraces interdisciplinary approaches, including sociology, anthropology, psychology, and history. By publishing thoughtful and innovative scholarship, YUJR provides a platform for students to engage with the academic study of religion, cultivating skills in analytical writing, peer review, and intellectual dialogue. The Journal publishes an annual issue and hosts events to promote engagement with the field of religious studies.
          </p>
    </section>
    
    <!-- Masthead Section -->
    <div class="masthead-container">
      <h1 class="masthead-title">Masthead</h1>
      <div class="year">2024-25</div>
      
      <div class="editors-section">
        <h2 class="section-title">Editor-in-Chief</h2>
        <div class="special-role">
          <p class="editor-name">Owen Hannon</p>
        </div>
      </div>
      
      <div class="editor-row">
        <div class="editor-column">
          <h2 class="section-title">Treasurer</h2>
          <p class="editor-name">Lucas Ranfranz</p>
        </div>
        
        <div class="editor-column">
          <h2 class="section-title">Managing Editor</h2>
          <p class="editor-name">Christopher Kim</p>
        </div>
        
        <div class="editor-column">
          <h2 class="section-title">Outreach Director</h2>
          <p class="editor-name">Adam Buchsbaum</p>
        </div>
      </div>
      
      <div class="editor-row">
        <div class="editor-column">
          <h2 class="section-title">Blog Director</h2>
          <p class="editor-name">Matthew Mendelsohn</p>
        </div>
        
        <div class="editor-column">
          <h2 class="section-title">Website Designer</h2>
          <p class="editor-name">Samhita Kumar</p>
        </div>
        
        <div class="editor-column">
          <h2 class="section-title">Social Media Director</h2>
          <p class="editor-name">Katie Weinberger</p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</body>
</html>