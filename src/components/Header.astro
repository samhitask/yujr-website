---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="header-container">
		<div class="logo">
			<a href="/">YUJR</a>
		</div>
		<nav>
			<div class="nav-links">
			<HeaderLink href="/articles">Articles</HeaderLink>
			<HeaderLink href="/submissions">Submissions</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		</nav>
	</div>
</header>

<style>
	header {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		z-index: 10;
		background: transparent;
		padding: 1.5rem 2rem;
		font-family: 'Caudex', serif;
	}

	.header-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo a {
		color: #ffffff;
		font-size: 1.5rem;
		font-weight: 700;
		text-decoration: none;
		letter-spacing: 1px;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		color: #ffffff;
		text-decoration: none;
		font-size: 1rem;
		letter-spacing: 0.5px;
		position: relative;
		transition: opacity 0.3s ease;
	}

	.nav-links a:after {
		content: '';
		position: absolute;
		width: 0;
		height: 1px;
		bottom: -4px;
		left: 0;
		background-color: #ffffff;
		transition: width 0.3s ease;
	}

	.nav-links a:hover:after {
		width: 100%;
	}

	@media (max-width: 768px) {
		.header-container {
			flex-direction: column;
			align-items: center;
		}

		.logo {
			margin-bottom: 1rem;
		}

		.nav-links {
			gap: 1rem;
		}
	}
</style>